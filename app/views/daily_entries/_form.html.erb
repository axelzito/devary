<%= simple_form_for(@daily_entry) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content, as: :text, input_html: {rows: 15} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-green" %>
  </div>
<% end %>
